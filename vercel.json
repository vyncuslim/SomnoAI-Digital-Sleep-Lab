{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(self), microphone=(self), geolocation=()" }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/api/health-upload", 
      "destination": "https://ojcvvtyaebdodmegwqan.supabase.co/functions/v1/bright-responder" 
    },
    { 
      "source": "/api/(.*)", 
      "destination": "/api/$1" 
    },
    {
      "source": "/((?!api|_next|static|favicon\\.ico|sw\\.js|manifest\\.json|favicon.png|privacy\\.html|terms\\.html|google-services\\.json|sitemap\\.xml|robots\\.txt|privacy/|terms/).*)",
      "destination": "/index.html"
    }
  ]
}