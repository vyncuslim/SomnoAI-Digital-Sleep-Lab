{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/health-upload", "destination": "https://ojcvvtyaebdodmegwqan.supabase.co/functions/v1/bright-responder" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/privacy", "destination": "/privacy.html" },
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/assistant", "destination": "/index.html" },
    { "source": "/experiment", "destination": "/index.html" },
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/calendar", "destination": "/index.html" },
    { "source": "/registry", "destination": "/index.html" },
    { "source": "/diary", "destination": "/index.html" },
    { "source": "/settings", "destination": "/index.html" },
    { "source": "/admin", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/signup", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}