{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/api/health-upload", 
      "destination": "https://ojcvvtyaebdodmegwqan.supabase.co/functions/v1/bright-responder" 
    },
    { 
      "source": "/api/(.*)", 
      "destination": "/api/$1" 
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}