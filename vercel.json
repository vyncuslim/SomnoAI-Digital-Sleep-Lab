{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/api/health-upload", 
      "destination": "https://ojcvvtyaebdodmegwqan.supabase.co/functions/v1/bright-responder" 
    },
    { 
      "source": "/api/(.*)", 
      "destination": "/api/$1" 
    },
    {
      "source": "/privacy",
      "destination": "/privacy.html"
    },
    {
      "source": "/terms",
      "destination": "/terms.html"
    },
    {
      "source": "/((?!api|privacy\\.html|terms\\.html|favicon\\.png|sw\\.js|manifest\\.json|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}