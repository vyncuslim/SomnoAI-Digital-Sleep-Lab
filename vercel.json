
{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/sync-analytics", "destination": "/api/sync-analytics.js" },
    { "source": "/api/send-system-email", "destination": "/api/send-system-email.js" },
    { "source": "/api/health-upload", "destination": "https://ojcvvtyaebdodmegwqan.supabase.co/functions/v1/bright-responder" },
    { "source": "/api/((?!sync-analytics|send-system-email).*)", "destination": "https://ojcvvtyaebdodmegwqan.supabase.co/functions/v1/$1" },
    { "source": "/admin", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/signin", "destination": "/index.html" },
    { "source": "/signup", "destination": "/index.html" },
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/settings", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    { "path": "/api/sync-analytics", "schedule": "0 3 * * *" }
  ]
}
